{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
{% if error %}
<div class="message message-error">
    {{error}}
</div>
{% endif %}
<form class="form" action="/auth/login" method="post">
    <input class="form-input" type="text" name="_username" placeholder="Username" required>
    <input class="form-input" type="password" name="_password" placeholder="Password" required>
    <button class="btn btn-submit" type="submit">Login</button>
</form>
{% endblock %}